{
  "manifest_version": 3,
  "name": "Synapse",
  "short_name": "Synapse",
  "description": "Un outil pour cr√©er facilement des cartes mentales.",
  "version": "0.0.1",

  "action": {
    "default_title": "Ouvrir Synapse"
  },

  "host_permissions": [
    "<all_urls>"
  ],

  "permissions": [
    "storage", 
    "activeTab"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
  "js": ["dist/content-script.js"],
  "css": ["dist/style.css"],
      "run_at": "document_idle"
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "synapse@votre-domaine.com"
    }
  }
}

